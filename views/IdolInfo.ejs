<!DOCTYPE html>

<html class="h-100 w-100" lang="zh-Hant-tw">

<head>
    <meta charset="UTF-8">

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js"
        integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM"
        crossorigin="anonymous"></script>

    <link rel="stylesheet" href="/static/css/IdolInfo.css">

    <!-- Open Graph / Facebook -->
    <meta property="og:type" content="website">
    <meta property="og:url" content="https://shinycolors.moe/info/IdolInfo?IdolID=<%= IdolInfo.IdolID %>">
    <meta property="og:title" content="<%= IdolInfo.IdolName %>">
    <meta property="og:description" content="
姓名: <%= IdolInfo.IdolName %>  身高: <%= IdolInfo.Height %>
生日: <%= IdolInfo.Birthday %>  體重: <%= IdolInfo.Weight %>
團體: <%= IdolInfo.UnitName %>  三圍: <%= IdolInfo.ThreeSize %>">
    <meta property="og:image"
        content="https://static.shinycolors.moe/pictures/bigPic/<%= CardList.PSSR.slice(-1)[0].BigPic1 %>">
    <meta name="theme-color" content="<%= IdolInfo.Color1 %>">
    <!-- Twitter -->
    <meta property="twitter:card" content="summary_large_image">
    <meta property="twitter:url" content="https://shinycolors.moe/info/IdolInfo?IdolID=<%= IdolInfo.IdolID %>">
    <meta property="twitter:title" content="<%= IdolInfo.IdolName %>">
    <meta property="twitter:description" content="
姓名: <%= IdolInfo.IdolName %>  身高: <%= IdolInfo.Height %>
生日: <%= IdolInfo.Birthday %>  體重: <%= IdolInfo.Weight %>
團體: <%= IdolInfo.UnitName %>  三圍: <%= IdolInfo.ThreeSize %>">
    <meta property="twitter:image"
        content="https://static.shinycolors.moe/pictures/bigPic/<%= CardList.PSSR.slice(-1)[0].BigPic1 %>">

    <title>
        <%= IdolInfo.IdolName %>-ShinyColorsDB
    </title>
    <script src="/static/javascript/IdolInfo.js"></script>
</head>

<body class="h-100" onload="Init();">
    <div class="container-fluid d-flex p-0 h-100">
        <div class="d-flex flex-column flex-shrink-0 p-3 bg-secondary d-inline-block h-100 col-2 accordion accordion-flush"
            id="divSidebar">
            <div class="accordion-item rounded-top">
                <h2 class="accordion-header" id="descHomePage">
                    <button class="accordion-button collapsed rounded-top" type="button"
                        data-bs-toggle="collapse" data-bs-target="#divMainList" aria-expanded="false" aria-controls="divMainList">
                        首頁
                    </button>
                </h2>
                <div id="divMainList" class="accordion-collapse collapse" aria-labelledby="descHomePage" data-bs-parent="#divSidebar">
                    <div class="accordion-body p-0 list-group">
                        <button class="w-100 rounded list-group-item text-start">ShinyColorsDB</button>
                        <button class="w-100 rounded list-group-item text-start">最新情報</button>
                        <button class="w-100 rounded list-group-item text-start">無限期招募前端大師= =</button>
                    </div>
                </div>
            </div>
            
            <div class="accordion-item overflow-auto">
                <h2 class="accordion-header" id="descUnit">
                    <button class="accordion-button" type="button" data-bs-toggle="collapse" data-bs-target="#divIdolUnitList"
                        aria-expanded="true" aria-controls="divIdolUnitList">
                        角色列表
                    </button>
                </h2>
                
                <div class="accordion-collapse collapse show" id="divIdolUnitList" aria-labelledby="descUnit" data-bs-parent="#divSidebar">
                    <% for(let i=0; i < IdolList.length; i++) { %>
                        <button href="#" class="list-group-item w-100 text-start" data-bs-toggle="collapse" data-bs-target=<%=`#unit${i + 1}` %>
                            style="background-color: <%= IdolList[i].UnitColor %>">
                            <img src="https://static.shinycolors.moe/pictures/unitIcon/00<%= i + 1 %>.png"
                                width="20" height="20" alt="">
                            <%= IdolList[i].UnitName %>
                        </button>
                        <div class="list-group <% if(i + 1 != IdolInfo.UnitID) { %> collapse <% } %>" id=<%=`unit${i + 1}` %>>
                            <% for(let k=0; k < IdolList[i].Idols.length; k++) { %>
                            <a href=<%=`/info/IdolInfo?IdolID=${IdolList[i].Idols[k].IdolID}` %>
                                class="
                                <% if(IdolList[i].Idols[k].IdolID==IdolInfo.IdolID) { %>
                                    active
                                <% } %> ps-4 list-group-item-action list-group-item">
                                <img src="https://static.shinycolors.moe/pictures/smlIcon/<% if(IdolList[i].Idols[k].IdolID < 10) { %>0<%=IdolList[i].Idols[k].IdolID%><% } else { %><%=IdolList[i].Idols[k].IdolID%><% } %>.png"
                                    width="40" height="40" alt="" class="d-inline-block">
                                <h6 class="d-inline-block">
                                    <%= IdolList[i].Idols[k].IdolName %>
                                </h6>
                            </a>
                            <% } %>
                        </div>
                    <% } %>
                </div>
            </div>
            <a href="https://spine.shinycolors.moe"
                class="p-2 bg-light text-dark rounded-bottom">服裝Live2d~~</a>
        </div>
        <div class="d-flex flex-column flex-shrink-0 p-3 d-inline-block col-2 h-100=" id="divIdolData">
            <div class="text-center">
                <h1><%=IdolInfo.IdolName%></h1>
                <img src="https://static.shinycolors.moe/pictures/icon/<% if(IdolInfo.IdolID < 10) { %>0<%=IdolInfo.IdolID%><% } else { %><%=IdolInfo.IdolID%><% } %>.jpg"
                    alt="" class="img-fluid bottom-0 end-50" id="imgIcon" >
            </div>
            <div class="table-responsive">
                <table class="table">
                    <tbody>
                        <tr>
                            <th class="col-3"></th>
                            <td><%=IdolInfo.Hiragana%></td>
                        </tr>
                        <tr>
                            <th>姓名</th>
                            <td><%=IdolInfo.IdolName%></td>
                        </tr>
                        <tr>
                            <th>身高</th>
                            <td><%=IdolInfo.Height%></td>
                        </tr>
                        <tr>
                            <th>體重</th>
                            <td><%=IdolInfo.Weight%></td>
                        </tr>
                        <tr>
                            <th>生日</th>
                            <td><%=IdolInfo.Birthday%></td>
                        </tr>
                        <tr>
                            <th>血型</th>
                            <td><%=IdolInfo.BloodType%></td>
                        </tr>
                        <tr>
                            <th>所屬</th>
                            <td><%=IdolInfo.UnitName%></td>
                        </tr>
                        <tr>
                            <th>三圍</th>
                            <td><%=IdolInfo.ThreeSize%></td>
                        </tr>
                        <tr>
                            <th>興趣</th>
                            <td><%=IdolInfo.Interest%></td>
                        </tr>
                        <tr>
                            <th>特技</th>
                            <td><%=IdolInfo.SpecialSkill%></td>
                        </tr>
                        <tr>
                            <th>聲優</th>
                            <td><%=IdolInfo.CV%></td>
                        </tr>
                    </tbody>
                </table>
            </div>
        </div>
        <div class="d-flex flex-column flex-shrink-0 p-3 d-inline-block col-8 h-100" id="divInfo">
            <div class="d-flex w-100 h-100">
                <div class="card text-center w-100 overflow-auto" id="idolCards">
                    <div class="card-header">
                        <ul class="nav nav-tabs card-header-tabs">
                            <li class="nav-item">
                                <a class="nav-link active disabled" href="javascript: void(0)" id="PList"
                                    data-cardType="P">P卡列表</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" href="javascript: void(0)" id="SList"
                                    data-cardType="S">S卡列表</a>
                            </li>
                        </ul>
                    </div>
                    <div class="card-body d-flex pl-0 pr-0 pb-0 container">
                        <div class="row" id="divCardProduce">
                            <h5>P_SSR</h5>
                            <% CardList.PSSR.forEach(e => { %>
                            <div class="col-4 pt-1 pb-1">
                                <div class="card">
                                    <a href="/info/PCardInfo?UUID=<%=e.CardUUID%>">
                                        <img src="https://static.shinycolors.moe/pictures/bigPic/<%=e.BigPic1%>" alt="" class="card-img-top">
                                        <div class="card-body">
                                            <h5 class="card-text">
                                                <%=e.CardName.replace(/(【.*】)(.*)/, "$1")%>
                                            </h5>
                                        </div>
                                    </a>                                
                                </div>  
                            </div>                          
                            <% }) %>
                            <h5>P_SR</h5>
                            <% CardList.PSR.forEach(e => { %>
                            <div class="col-4 pt-1 pb-1">
                                <div class="card">
                                    <a href="/info/PCardInfo?UUID=<%=e.CardUUID%>">
                                        <img src="https://static.shinycolors.moe/pictures/bigPic/<%=e.BigPic1%>" alt="" class="card-img-top">
                                        <div class="card-body">
                                            <h5 class="card-text">
                                                <%=e.CardName.replace(/(【.*】)(.*)/, "$1")%>
                                            </h5>
                                        </div>
                                    </a>                                
                                </div>  
                            </div>                          
                            <% }) %>
                            <h5>P_R</h5>
                            <% CardList.PR.forEach(e => { %>
                            <div class="col-4 pt-1 pb-1">
                                <div class="card">
                                    <a href="/info/PCardInfo?UUID=<%=e.CardUUID%>">
                                        <img src="https://static.shinycolors.moe/pictures/bigPic/<%=e.BigPic1%>" alt="" class="card-img-top">
                                        <div class="card-body">
                                            <h5 class="card-text">
                                                <%=e.CardName.replace(/(【.*】)(.*)/, "$1")%>
                                            </h5>
                                        </div>
                                    </a>                                
                                </div>  
                            </div>                          
                            <% }) %>
                        </div>
                        <div class="d-none row" id="divCardSupport">
                            <h5>S_SSR</h5>
                            <% CardList.SSSR.forEach(e => { %>
                            <div class="col-4 pt-1 pb-1">
                                <div class="card">
                                    <a href="/info/SCardInfo?UUID=<%=e.CardUUID%>">
                                        <img src="https://static.shinycolors.moe/pictures/bigPic/<%=e.BigPic1%>" alt="" class="card-img-top">
                                        <div class="card-body">
                                            <h5 class="card-text">
                                                <%=e.CardName.replace(/(【.*】)(.*)/, "$1")%>
                                            </h5>
                                        </div>
                                    </a>                                
                                </div>  
                            </div>                          
                            <% }) %>
                            <h5>S_SR</h5>
                            <% CardList.SSR.forEach(e => { %>
                            <div class="col-4 pt-1 pb-1">
                                <div class="card">
                                    <a href="/info/SCardInfo?UUID=<%=e.CardUUID%>">
                                        <img src="https://static.shinycolors.moe/pictures/bigPic/<%=e.BigPic1%>" alt="" class="card-img-top">
                                        <div class="card-body">
                                            <h5 class="card-text">
                                                <%=e.CardName.replace(/(【.*】)(.*)/, "$1")%>
                                            </h5>
                                        </div>
                                    </a>                                
                                </div>  
                            </div>                          
                            <% }) %>
                            <h5>S_R</h5>
                            <% CardList.SR.forEach(e => { %>
                            <div class="col-4 pt-1 pb-1">
                                <div class="card">
                                    <a href="/info/SCardInfo?UUID=<%=e.CardUUID%>">
                                        <img src="https://static.shinycolors.moe/pictures/bigPic/<%=e.BigPic1%>" alt="" class="card-img-top">
                                        <div class="card-body">
                                            <h5 class="card-text">
                                                <%=e.CardName.replace(/(【.*】)(.*)/, "$1")%>
                                            </h5>
                                        </div>
                                    </a>                                
                                </div>  
                            </div>                          
                            <% }) %>
                            <% if(CardList.SN.length) { %>
                            <h5>S_N</h5>
                            <% CardList.SN.forEach(e => { %>
                            <div class="col-4 pt-1 pb-1">
                                <div class="card">
                                    <a href="/info/SCardInfo?UUID=<%=e.CardUUID%>">
                                        <img src="https://static.shinycolors.moe/pictures/bigPic/<%=e.BigPic1%>" alt="" class="card-img-top">
                                        <div class="card-body">
                                            <h5 class="card-text">
                                                <%=e.CardName.replace(/(【.*】)(.*)/, "$1")%>
                                            </h5>
                                        </div>
                                    </a>                                
                                </div>  
                            </div>                          
                            <% }) %>
                            <% } %>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</body>