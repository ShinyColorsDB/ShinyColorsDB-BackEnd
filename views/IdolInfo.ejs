<!DOCTYPE html>

<html class="h-100 w-100" lang="zh-Hant-tw">

<head>
    <meta charset="UTF-8">

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js"
        integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM"
        crossorigin="anonymous"></script>

    <link rel="stylesheet" href="/static/css/IdolInfo.css">

    <!-- Open Graph / Facebook -->
    <meta property="og:type" content="website">
    <meta property="og:url" content="https://shinycolors.moe/info/IdolInfo?IdolID=<%= IdolInfo.IdolID %>">
    <meta property="og:title" content="<%= IdolInfo.IdolName %>">
    <meta property="og:description" content="
        姓名: <%= IdolInfo.IdolName %> 
        生日: <%= IdolInfo.Birthday %> 
        團體: <%= IdolInfo.UnitName %>">
    <meta property="og:image"
        content="https://static.shinycolors.moe/pictures/bigPic/<%= CardList.PSSR.slice(-1)[0].BigPic1 %>">
    <meta name="theme-color" content="<%= IdolInfo.Color1 %>">
    <!-- Twitter -->
    <meta property="twitter:card" content="summary_large_image">
    <meta property="twitter:url" content="https://shinycolors.moe/info/IdolInfo?IdolID=<%= IdolInfo.IdolID %>">
    <meta property="twitter:title" content="<%= IdolInfo.IdolName %>">
    <meta property="twitter:description" content="
        姓名: <%= IdolInfo.IdolName %> 
        生日: <%= IdolInfo.Birthday %> 
        團體: <%= IdolInfo.UnitName %>">
    <meta property="twitter:image"
        content="https://static.shinycolors.moe/pictures/bigPic/<%= CardList.PSSR.slice(-1)[0].BigPic1 %>">

    <title>
        <%= IdolInfo.IdolName %>-ShinyColorsDB
    </title>
    <script src="/static/javascript/IdolInfo.js"></script>
</head>

<body class="h-100" onload="Init();">
    <!--黒木ほのか好婆喔ほのけ-->
    <div class="container-fluid d-flex p-0 h-100">
        <div class="d-flex flex-column flex-shrink-0 p-3 bg-secondary d-inline-block h-100 col-2 list-group"
            id="divSidebar">
            <a href="#" class="list-group-item p-2 bg-light text-dark custom-rounded rounded-lg"
                data-bs-toggle="collapse" data-bs-target="#divMainList">首頁</a>
            <div class="list-group well overflow-auto custom-scroll collapse" id="divMainList">
                <a href="/" class="list-group-item">ShinyColorsDB</a>
                <a href="#" class="list-group-item">最新情報</a>
                <a href="#" class="list-group-item">無限期招募前端大師= =</a>
            </div>

            <a href="#" class="list-group-item p-2 bg-light text-dark custom-rounded" data-bs-toggle="collapse"
                data-bs-target="#divIdolUnitList">角色列表</a>
            <div class="list-group well overflow-auto custom-scroll" id="divIdolUnitList">
                <% for(let i=0; i < IdolList.length; i++) { %>
                    <a href="#" class="list-group-item" data-bs-toggle="collapse" data-bs-target=<%=`#unit${i + 1}` %>
                        style="background-color: <%= IdolList[i].UnitColor %>"
                        <% if(i + 1 == IdolInfo.UnitID) { %> aria-expanded=true <% } %>>
                            <img src="https://static.shinycolors.moe/pictures/unitIcon/00<%= i + 1 %>.png" width="20"
                                height="20" alt="">
                            <%= IdolList[i].UnitName %>
                    </a>
                    <div class="<% if(i + 1 == IdolInfo.UnitID) { %> list-group <% } else { %> list-group collapse <% } %>"
                        id=<%=`unit${i + 1}` %>>
                        <% for(let k=0; k < IdolList[i].Idols.length; k++) { %>
                            <a href=<%=`/info/IdolInfo?IdolID=${IdolList[i].Idols[k].IdolID}` %>
                                class="
                                <% if(IdolList[i].Idols[k].IdolID==IdolInfo.IdolID) { %>
                                list-group-item active ps-4 list-group-item-action
                                <% } else { %>
                                list-group-item ps-4 list-group-item-action
                                <% } %>">
                                <img src="https://static.shinycolors.moe/pictures/smlIcon/<% if(IdolList[i].Idols[k].IdolID < 10) { %>0<%=IdolList[i].Idols[k].IdolID%><% } else { %><%=IdolList[i].Idols[k].IdolID%><% } %>.png"
                                    width="40" height="40" alt="">
                                <%= IdolList[i].Idols[k].IdolName %>
                            </a>
                            <% } %>
                    </div>
                    <% } %>

            </div>
            <a href="https://spine.shinycolors.moe"
                class="list-group-item p-2 bg-light text-dark custom-rounded rounded-lg">服裝Live2d~~</a>
        </div>
        <div class="d-flex flex-column flex-shrink-0 p-3 d-inline-block col-2 h-100=" id="divIdolData">
            <div class="text-center">
                <h1><%=IdolInfo.IdolName%></h1>
                <img src="https://static.shinycolors.moe/pictures/icon/<% if(IdolInfo.IdolID < 10) { %>0<%=IdolInfo.IdolID%><% } else { %><%=IdolInfo.IdolID%><% } %>.jpg"
                    alt="" class="img-fluid bottom-0 end-50" id="imgIcon" >
            </div>
            <div class="">
                <table class="table">
                    <tbody>
                        <tr>
                            <th></th>
                            <td><%=IdolInfo.Hiragana%></td>
                        </tr>
                        <tr>
                            <th>姓名</th>
                            <td><%=IdolInfo.IdolName%></td>
                        </tr>
                        <tr>
                            <th>身高</th>
                            <td><%=IdolInfo.Height%></td>
                        </tr>
                        <tr>
                            <th>體重</th>
                            <td><%=IdolInfo.Weight%></td>
                        </tr>
                        <tr>
                            <th>生日</th>
                            <td><%=IdolInfo.Birthday%></td>
                        </tr>
                        <tr>
                            <th>血型</th>
                            <td><%=IdolInfo.BloodType%></td>
                        </tr>
                        <tr>
                            <th>所屬</th>
                            <td><%=IdolInfo.UnitName%></td>
                        </tr>
                        <tr>
                            <th>三圍</th>
                            <td><%=IdolInfo.ThreeSize%></td>
                        </tr>
                        <tr>
                            <th>興趣</th>
                            <td><%=IdolInfo.Interest%></td>
                        </tr>
                        <tr>
                            <th>特技</th>
                            <td><%=IdolInfo.SpecialSkill%></td>
                        </tr>
                        <tr>
                            <th>聲優</th>
                            <td><%=IdolInfo.CV%></td>
                        </tr>
                    </tbody>
                </table>
            </div>
        </div>
        <!---KRAZ好婆喔KRAZ--->
        <div class="d-flex flex-column flex-shrink-0 p-3 d-inline-block col-8 h-100" id="divInfo">
            <div class="d-flex w-100 h-100">
                <div class="card text-center w-100 overflow-auto" id="idolCards">
                    <div class="card-header">
                        <ul class="nav nav-tabs card-header-tabs">
                            <li class="nav-item">
                                <a class="nav-link active disabled" href="javascript: void(0)" id="PList"
                                    data-cardType="P">P卡列表</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" href="javascript: void(0)" id="SList"
                                    data-cardType="S">S卡列表</a>
                            </li>
                        </ul>
                    </div>
                    <!---土屋李央好可愛喔李央--->
                    <div class="card-body d-flex pl-0 pr-0 pb-0 container">
                        <div class="row" id="divCardProduce">
                            <h5>P_SSR</h5>
                            <% CardList.PSSR.forEach(e => { %>
                            <div class="col-4 pt-1 pb-1">
                                <div class="card">
                                    <a href="/info/PCardInfo?UUID=<%=e.CardUUID%>">
                                        <img src="https://static.shinycolors.moe/pictures/bigPic/<%=e.BigPic1%>" alt="" class="card-img-top">
                                        <div class="card-body">
                                            <p class="card-text">
                                                <%=e.CardName.replace(/(【.*】)(.*)/, "$1")%>
                                            </p>
                                        </div>
                                    </a>                                
                                </div>  
                            </div>                          
                            <% }) %>
                            <h5>P_SR</h5>
                            <% CardList.PSR.forEach(e => { %>
                            <div class="col-4 pt-1 pb-1">
                                <div class="card">
                                    <a href="/info/PCardInfo?UUID=<%=e.CardUUID%>">
                                        <img src="https://static.shinycolors.moe/pictures/bigPic/<%=e.BigPic1%>" alt="" class="card-img-top">
                                        <div class="card-body">
                                            <p class="card-text">
                                                <%=e.CardName.replace(/(【.*】)(.*)/, "$1")%>
                                            </p>
                                        </div>
                                    </a>                                
                                </div>  
                            </div>                          
                            <% }) %>
                            <h5>P_R</h5>
                            <% CardList.PR.forEach(e => { %>
                            <div class="col-4 pt-1 pb-1">
                                <div class="card">
                                    <a href="/info/PCardInfo?UUID=<%=e.CardUUID%>">
                                        <img src="https://static.shinycolors.moe/pictures/bigPic/<%=e.BigPic1%>" alt="" class="card-img-top">
                                        <div class="card-body">
                                            <p class="card-text">
                                                <%=e.CardName.replace(/(【.*】)(.*)/, "$1")%>
                                            </p>
                                        </div>
                                    </a>                                
                                </div>  
                            </div>                          
                            <% }) %>
                        </div>
                        <div class="d-none row" id="divCardSupport">
                            <h5>S_SSR</h5>
                            <% CardList.SSSR.forEach(e => { %>
                            <div class="col-4 pt-1 pb-1">
                                <div class="card">
                                    <a href="/info/SCardInfo?UUID=<%=e.CardUUID%>">
                                        <img src="https://static.shinycolors.moe/pictures/bigPic/<%=e.BigPic1%>" alt="" class="card-img-top">
                                        <div class="card-body">
                                            <p class="card-text">
                                                <%=e.CardName.replace(/(【.*】)(.*)/, "$1")%>
                                            </p>
                                        </div>
                                    </a>                                
                                </div>  
                            </div>                          
                            <% }) %>
                            <h5>S_SR</h5>
                            <% CardList.SSR.forEach(e => { %>
                            <div class="col-4 pt-1 pb-1">
                                <div class="card">
                                    <a href="/info/SCardInfo?UUID=<%=e.CardUUID%>">
                                        <img src="https://static.shinycolors.moe/pictures/bigPic/<%=e.BigPic1%>" alt="" class="card-img-top">
                                        <div class="card-body">
                                            <p class="card-text">
                                                <%=e.CardName.replace(/(【.*】)(.*)/, "$1")%>
                                            </p>
                                        </div>
                                    </a>                                
                                </div>  
                            </div>                          
                            <% }) %>
                            <h5>S_R</h5>
                            <% CardList.SR.forEach(e => { %>
                            <div class="col-4 pt-1 pb-1">
                                <div class="card">
                                    <a href="/info/SCardInfo?UUID=<%=e.CardUUID%>">
                                        <img src="https://static.shinycolors.moe/pictures/bigPic/<%=e.BigPic1%>" alt="" class="card-img-top">
                                        <div class="card-body">
                                            <p class="card-text">
                                                <%=e.CardName.replace(/(【.*】)(.*)/, "$1")%>
                                            </p>
                                        </div>
                                    </a>                                
                                </div>  
                            </div>                          
                            <% }) %>
                            <% if(CardList.SN.length) { %>
                            <h5>S_N</h5>
                            <% CardList.SN.forEach(e => { %>
                            <div class="col-4 pt-1 pb-1">
                                <div class="card">
                                    <a href="/info/SCardInfo?UUID=<%=e.CardUUID%>">
                                        <img src="https://static.shinycolors.moe/pictures/bigPic/<%=e.BigPic1%>" alt="" class="card-img-top">
                                        <div class="card-body">
                                            <p class="card-text">
                                                <%=e.CardName.replace(/(【.*】)(.*)/, "$1")%>
                                            </p>
                                        </div>
                                    </a>                                
                                </div>  
                            </div>                          
                            <% }) %>
                            <% } %>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</body>